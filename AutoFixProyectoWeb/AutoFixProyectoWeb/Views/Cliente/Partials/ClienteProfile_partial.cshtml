@model AutoFixProyectoWeb.Entities.UsuarioEnt
@{
    ViewBag.Title = "ClienteProfile_partial";
}

<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Información de Usuario</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a href="javascript:;">
                        <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top"
                           title="Editar Perfil"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <hr class="horizontal gray-light my-1">
            <ul class="list-group">
                <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                    <strong class="text-dark">Nombre:</strong> &nbsp;
                    @Model.nombre
                </li>
                <li class="list-group-item border-0 ps-0 text-sm">
                    <strong class="text-dark">Telefono:</strong> &nbsp;
                    @Model.telefono
                </li>
                <li class="list-group-item border-0 ps-0 text-sm">
                    <strong class="text-dark">Correo:</strong> &nbsp;
                    @Model.correo
                </li>
                <li class="list-group-item border-0 ps-0 text-sm">
                    <strong class="text-dark">Ubicación:</strong> &nbsp;
                    ***
                </li>
            </ul>
        </div>
    </div>
</div>
