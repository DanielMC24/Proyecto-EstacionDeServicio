@model List<AutoFixProyectoWeb.ModelDB.ESTADOS_PROYECTO_DE_CLIENTE_Result>

@{
    ViewBag.Title = "Estado_partial";
}

<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Estado del Proyecto</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="fas fa-plus text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top"
                           title="Agregar Paso"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="timeline timeline-one-side">
                @foreach (var estado in Model)
                {
                    <div class="timeline-block mb-3">
                        <span class="timeline-step">
                            <i class="ni ni-bell-55 text-success text-gradient"></i>
                        </span>
                        <div class="timeline-content">
                            <h6 class="text-dark text-sm font-weight-bold mb-0">@estado.ESTADO</h6>
                            <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">@estado.FECHA</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal Estado Proyecto -->
<div class="modal modal-lg fade" id="exampleModal" tabindex="-1" aria-labelledby="estadoProyecto"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Actualización de Estado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <label for="txtEstado">Estado</label>
                    <select name="txtEstado" id="txtEstado" aria-placeholder="Indique el role del usuario"
                            class="form-control" required>
                        <option value="1">Evaluación Inicial</option>
                        <option value="2">Reparación en Proceso</option>
                        <option value="3">Esperando Repuesto</option>
                        <option value="4">Listo para Entrega</option>
                        <option value="4">Entregado</option>
                    </select>
                    <label for="txtComentario">Comentario</label>
                    <textarea name="txtComentario" id="txtComentario" cols="30" rows="10" placeholder="Agregar comentario"
                              class="form-control"></textarea>
                    <div class="row mt-xl-3 justify-content-center text-center">
                        <div class="col-md-12">
                            <input type="submit" value="Actualizar Estado" class="btn bg-gradient-dark">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

