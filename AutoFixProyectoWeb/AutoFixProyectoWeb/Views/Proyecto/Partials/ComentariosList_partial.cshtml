@model List<AutoFixProyectoWeb.ModelDB.COMENTARIOS_DE_PROYECTO_Result>
@{
    ViewBag.Title = "Comentarios_partial";
}

<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Comentarios</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a data-bs-toggle="modal" data-bs-target="#agregarComentario">
                        <i class="fas fa-plus text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top"
                           title="Agregar Comentario"></i>
                    </a>
                </div>
            </div>
        </div>
        @*<span class="badge badge-sm bg-gradient-warning">Cliente</span>
        <span class="badge badge-sm bg-gradient-dark">Mecánico</span>*@

        <div class="card-body pt-4 p-3">
            <ul class="list-group">
                @foreach (var comentario in Model)
                {
                    <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                        <div class="d-flex flex-column">
                            <h6 class="mb-3 text-sm">
                                @if (comentario.ID_ROL_USUARIO == 2)
                                {
                                    @comentario.NOMBRE_USUARIO <span class="badge badge-sm bg-gradient-dark">@comentario.ROL_USUARIO</span>
                                }
                                @if (comentario.ID_ROL_USUARIO == 3)
                                {
                                    @comentario.NOMBRE_USUARIO <span class="badge badge-sm bg-gradient-warning">Cliente</span>
                                }
                            </h6>
                            <span class="mb-2 text-xs">
                                Fecha: <span class="text-dark ms-sm-2 font-weight-bold">
                                    @comentario.FECHA
                                </span>
                            </span>
                            <span class="text-xs">
                                Comentario: <span class="text-dark ms-sm-2 font-weight-bold">
                                    @comentario.COMENTARIO
                                </span>
                            </span>
                        </div>
                        <div class="ms-auto text-end">
                            <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="javascript:;">
                                <i class="far fa-trash-alt me-2"></i>Delete
                            </a>
                            <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;">
                                <i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit
                            </a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>


<!-- Modal Comentario -->
<div class="modal modal-lg fade" id="agregarComentario" tabindex="-1" aria-labelledby="agregarComentario"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarComentarioLabel">Agregar Comentario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label for="txtComentario">Comentario</label>
                <textarea name="txtComentario" id="txtComentario" cols="30" rows="10" placeholder="Agregar comentario"
                          class="form-control"></textarea>
                <div class="row mt-xl-3 justify-content-center text-center">
                    <div class="col-md-12">
                        <input type="submit" value="Agregar Comentario" class="btn bg-gradient-dark">
                    </div>
                </div>

                </form>
            </div>
        </div>
    </div>
</div>